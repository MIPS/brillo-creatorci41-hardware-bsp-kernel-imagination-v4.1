#include "pistachio.dtsi"
#include <dt-bindings/sound/pistachio-audio.h>

/ {
	supply5v0: supply5v0@0 {
		compatible = "regulator-fixed";
		regulator-name = "5V-supply";
		regulator-min-microvolt = <5000000>;
		regulator-max-microvolt = <5000000>;
	};

	supply3v3: supply3v3@0 {
		compatible = "regulator-fixed";
		regulator-name = "3V3-supply";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
	};

	pistachio_audio_card {
		compatible = "img,pistachio-audio";

		clocks = <&clk_core CLK_AUDIO_PLL>,
			 <&clk_core CLK_I2S>,
			 <&clk_core CLK_AUDIO>;
		clock-names = "audio_pll", "i2s_mclk", "dac_clk";

		img,cr-periph = <&cr_periph>;
		img,event-timer = <&event_timer>;

		img,mute-gpio = <&gpio5 1 GPIO_ACTIVE_LOW>;
		img,hp-det-gpio = <&gpio5 3 GPIO_ACTIVE_LOW>;

		img,widgets = "Headphone", "Headphones",
			      "Speaker", "Speakers",
			      "Line", "RCA Out";

		img,routing = "Headphones", "tpa OUTL",
			      "Headphones", "tpa OUTR",
			      "Speakers", "tpa OUTL",
			      "Speakers", "tpa OUTR",
			      "RCA Out", "internal-dac AOUTL",
			      "RCA Out", "internal-dac AOUTR",
			      "tpa INL", "internal-dac AOUTL",
			      "tpa INR", "internal-dac AOUTR";

		spdif-out {
			cpu-dai = <&spdif_out>;
		};

		spdif-in {
			cpu-dai = <&spdif_in>;
		};

		parallel-out {
			cpu-dai = <&parallel_out>;
			sound-dai = <&internal_dac>;
			tpa6130a2 = <&tpa6130a2>;
		};

		i2s-out {
			cpu-dai = <&i2s_out>;
			format = "i2s";

			pcm3168a-1 {
				mclk = <PISTACHIO_MCLK_DAC>;
				mclk-fs = <128 192 256 384 512 768>;
				mclk-min-freq = <2048000>;
				mclk-max-freq = <36864000>;
				sound-dai = <&pcm3168a_1 0>;
			};

			pcm3168a-2 {
				mclk = <PISTACHIO_MCLK_DAC>;
				mclk-fs = <128 192 256 384 512 768>;
				mclk-min-freq = <2048000>;
				mclk-max-freq = <36864000>;
				sound-dai = <&pcm3168a_2 0>;
			};
		};

		i2s-in {
			cpu-dai = <&i2s_in>;
			format = "i2s";

			pcm3168a-1 {
				mclk = <PISTACHIO_MCLK_DAC>;
				mclk-fs = <256 384 512 768>;
				mclk-min-freq = <2048000>;
				mclk-max-freq = <36864000>;
				sound-dai = <&pcm3168a_1 1>;
			};

			pcm3168a-2 {
				mclk = <PISTACHIO_MCLK_DAC>;
				mclk-fs = <256 384 512 768>;
				mclk-min-freq = <2048000>;
				mclk-max-freq = <36864000>;
				sound-dai = <&pcm3168a_2 1>;
				frame-master;
				bitclock-master;
			};
		};
	};
};

&i2c2 {
	status = "okay";
	clock-frequency = <400000>;

	pcm3168a_1: pcm3168a_1@44 {
		compatible = "ti,pcm3168a";
		reg = <0x44>;
		clocks = <&clk_core CLK_AUDIO>;
		clock-names = "scki";

		assigned-clocks = <&clk_core CLK_AUDIO_PLL>,
				  <&clk_core CLK_AUDIO_PLL_MUX>,
				   <&clk_core CLK_AUDIO>;
		assigned-clock-parents = <0>,
					 <&clk_core CLK_AUDIO_PLL>,
					 <0>;
		assigned-clock-rates = <147456000>,
				       <147456000>,
				       <12288000>;

		pinctrl-names = "default";
		pinctrl-0 = <&dac_clk_pin>;
		VDD1-supply = <&supply3v3>;
		VDD2-supply = <&supply3v3>;
		VCCAD1-supply = <&supply5v0>;
		VCCAD2-supply = <&supply5v0>;
		VCCDA1-supply = <&supply5v0>;
		VCCDA2-supply = <&supply5v0>;

		#sound-dai-cells = <1>;
	};

	pcm3168a_2: pcm3168a_2@45 {
		compatible = "ti,pcm3168a";
		reg = <0x45>;
		clocks = <&clk_core CLK_AUDIO>;
		clock-names = "scki";

		assigned-clocks = <&clk_core CLK_AUDIO_PLL>,
				  <&clk_core CLK_AUDIO_PLL_MUX>,
				   <&clk_core CLK_AUDIO>;
		assigned-clock-parents = <0>,
					 <&clk_core CLK_AUDIO_PLL>,
					 <0>;
		assigned-clock-rates = <147456000>,
				       <147456000>,
				       <12288000>;

		pinctrl-names = "default";
		pinctrl-0 = <&dac_clk_pin>;
		VDD1-supply = <&supply3v3>;
		VDD2-supply = <&supply3v3>;
		VCCAD1-supply = <&supply5v0>;
		VCCAD2-supply = <&supply5v0>;
		VCCDA1-supply = <&supply5v0>;
		VCCDA2-supply = <&supply5v0>;

		#sound-dai-cells = <1>;
	};
};

&i2c3 {
	status = "okay";
	clock-frequency = <400000>;

	tpa6130a2: tpa6130a2@60 {
		compatible = "ti,tpa6130a2";
		reg = <0x60>;
		Vdd-supply = <&supply5v0>;
	};
};

&i2s_out {
	status = "okay";
};

&i2s_in {
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&i2s_in_pins>;
};

&spdif_out {
	status = "okay";
};

&spdif_in {
	status = "okay";
};

&parallel_out {
	status = "okay";
};
